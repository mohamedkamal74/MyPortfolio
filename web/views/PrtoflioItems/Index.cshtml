@model IEnumerable<Core.Entities.PrtofolioItem>

@{
    ViewData["Title"] = "Index";
}

<div style="padding:120px">
<h1 class="text-info">Index</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
               <img src="~/img/portfolio/@item.ImageUrl" style="width:70px;height:70px" class="img-thumbnail" />
            </td>
           
            <td>
                @Html.ActionLink("", "Edit", new { id=item.Id  }, new { @class = "fas fa-edit" }) 
                @Html.ActionLink("", "Details", new { id=item.Id  }, new { @class = "fas fa-eye" }) 
                @Html.ActionLink("", "Delete", new{ id=item.Id }, new { @class = "fas fa-trash" })
            </td>
        </tr>
}
    </tbody>
</table>
</div>